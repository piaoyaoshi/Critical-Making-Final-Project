
const int bp1 = 2;     
// the number of the pushbutton pin
const int bp2 = 3;     
// the number of the pushbutton pin
const int bp3 = 4;    
// the number of the pushbutton pin


const int lp1 =  11;      // the number of the LED pin
const int lp2 =  12;      // the number of the LED pin
const int lp3 =  13;      // the number of the LED pin
int bs1 = 0;         
// variable for reading the pushbutton status
int bs2 = 0;         
// variable for reading the pushbutton status
int bs3 = 0;         
// variable for reading the pushbutton status


 
//this variable will hold a random number generated by the random() function
int randomNumber;
 
//Set up - this is where you get things "set-up". It will only run once
void setup() {
  pinMode(lp1, OUTPUT);
  pinMode(lp2, OUTPUT);
  pinMode(lp3, OUTPUT);
  pinMode(bp1, INPUT);
  pinMode(bp2, INPUT);
  pinMode(bp3, INPUT);      
} //close setup
 
//The loop() runs over and over again
void loop() {
  
  //generate a random number from 0 to 3
  bs1 = digitalRead(bp1);
  bs2 = digitalRead(bp2);
  bs3 = digitalRead(bp3);
  
  if (bs1 == HIGH or bs2 == HIGH or bs3 == HIGH )
  {
    randomNumber = random(0,3);
    digitalWrite(lp1, LOW);
    digitalWrite(lp2, LOW);
    digitalWrite(lp3, LOW);
    
    if (bs1 == HIGH and randomNumber == 0) {
      digitalWrite(lp1, HIGH);
    } else if (bs1 == HIGH and randomNumber != 0) {
      digitalWrite(lp2, HIGH);
    } else if (bs2 == HIGH and randomNumber == 0) {
      digitalWrite(lp2, HIGH);
    } else if (bs2 == HIGH and randomNumber != 0) {
      digitalWrite(lp3, HIGH);
    } else if (bs3 == HIGH and randomNumber == 0) {
      digitalWrite(lp3, HIGH);
    } else if (bs3 == HIGH and randomNumber != 0) {
      digitalWrite(lp1, HIGH);
    }
  } 
}
